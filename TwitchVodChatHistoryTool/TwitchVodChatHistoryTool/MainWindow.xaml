<Window x:Class="TwitchVodChatHistoryTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwitchVodChatHistoryTool"
        mc:Ignorable="d"
        Title="Twitch Vod Chat History Tool" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="57*"/>
        </Grid.RowDefinitions>
        <TextBox Name="UsernamesText"  Margin="61,0,5,0" Text="{Binding Usernames, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" VerticalAlignment="Center" Height="18"/>
        <Button Name="CommentsDataGrid" Content="Populate" Margin="5,0,0,0" VerticalAlignment="Center" Click="Button_Click" HorizontalAlignment="Left" Width="51" Height="20"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="550*"/>
            </Grid.ColumnDefinitions>
            <ListBox x:Name="VideosListBox" SelectionChanged="ListBox_SelectionChanged" ItemsSource="{Binding Videos, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" DisplayMemberPath="Title" Grid.Column="0" Margin="0,0,5,0"/>
            <GridSplitter ResizeDirection="Columns" Width="5"/>
            <DataGrid Grid.Column="1" ItemsSource="{Binding Comments, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" CanUserAddRows="False"/>
        </Grid>

    </Grid>
</Window>
